<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="449.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parcial_final.ReportB_Controller">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="50.0">
               <children>
                    <Label text="Client ID">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" top="30.0" />
               </HBox.margin></Label>
                    <TextField fx:id="txtIdClient">
               <HBox.margin>
                  <Insets right="5.0" top="26.0" />
               </HBox.margin></TextField>
               </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="50.0">
               <children>
                    <Label text="Month">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin></Label>
                    <ComboBox fx:id="cmbMonth" prefWidth="150.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="60.0" prefWidth="200.0" spacing="50.0">
               <children>
                    <Label text="Year">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
               <HBox.margin>
                  <Insets left="40.0" top="10.0" />
               </HBox.margin></Label>
                    <TextField fx:id="txtYear">
               <HBox.margin>
                  <Insets left="21.0" top="6.0" />
               </HBox.margin></TextField>
               </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
            </HBox>
              <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#reportB" text="Generate report">
                  <font>
                      <Font name="System Bold" size="12.0" />
                  </font>
         <VBox.margin>
            <Insets left="25.0" />

         </VBox.margin></Button>
              <TableView fx:id="tvReport" prefHeight="180.0" prefWidth="414.0">
                  <columns>
                      <TableColumn fx:id="cClientName" prefWidth="128.0" text="Client Name" />
                      <TableColumn fx:id="cAmountOfMoney" prefWidth="285.0" text="Amount of money" />
                  </columns>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
              </TableView>
            <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#onReturnbtn_Click" text="Return">
         <VBox.margin>
            <Insets left="25.0" top="10.0" />
         </VBox.margin></Button>
         </children>
      </VBox>
